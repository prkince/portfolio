<div class="page-contact">
  <div class="contacts-container" align="center" data-aos="zoom-in" data-aos-delay="800">

    <%= simple_form_for @contact do |f| %>
      <%= f.label :contact, label: "Contact Me"  %>
      <%= f.input :name, :required => true, label: "Name:"  %>
      <%= f.input :email, :required => true, label: "Email:" %>
      <%= f.input :subject, :required => true, label: "Subject of the message:" %>
      <%= f.input :content, :as => :text, :required => true, label: "Content of the message:" %>
      <div class= "hidden">
        <%= f.input :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div>
        <%= f.button :submit, 'Send', :class=> "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
  <div class="contacts-links">
    <a href="https://github.com/prkince" target="_blank"><i class="fab fa-github"></i></a>
    <a href="https://www.linkedin.com/in/pierrick-delage" target="_blank"><i class="fab fa-linkedin"></i></a>
    <a href="https://github.com/prkince/resume_prk/blob/master/resume_prk.pdf" target="_blank"><i class="far fa-file"></i></a>
  </div>

</div>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
